<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainHeader" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <style name="InputHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">30dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextPrompt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>